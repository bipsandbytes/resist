{
  "name": "resist-chrome-extension",
  "version": "1.0.0",
  "description": "Digital nutrition labels for social media content",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && npm run copy-manifest && npm run copy-css && npm run copy-ocr && npm run fix-html",
    "copy-manifest": "cp src/manifest.json dist/",
    "copy-css": "cp src/content.css dist/",
    "copy-ocr": "mkdir -p dist/thirdparty/ocr && cp src/thirdparty/ocr/* dist/thirdparty/ocr/",
    "fix-html": "mv dist/src/*.html dist/ 2>/dev/null && rmdir dist/src 2>/dev/null || true",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^1.0.0",
    "jsdom": "^23.0.0",
    "rollup-plugin-import-meta-url": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "tesseract.js": "^5.0.0"
  }
}

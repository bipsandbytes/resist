{
  "manifest_version": 3,
  "name": "Resist",
  "version": "1.0.0",
  "description": "Digital nutrition labels for social media content to help manage attention consumption",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://cdn.jsdelivr.net/*",
    "https://huggingface.co/*",
    "https://d2fu55o6hgtd0l.cloudfront.net/*",
    "https://api.resist-extension.org/*"
  ],
  "background": {
    "service_worker": "background-service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["thirdparty/ocr/ocr-image.js", "content.js"],
      "css": ["content.css", "nutrition-label.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/resist_icon_16x16.png",
    "32": "icons/resist_icon_32x32.png",
    "48": "icons/resist_icon_48x48.png",
    "128": "icons/resist_icon_128x128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Resist - Digital Nutrition"
  },
  "options_page": "settings/index.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "thirdparty/ocr/ocr-test.html",
        "thirdparty/ocr/*.js",
        "settings/*.js",
        "**.js",
        "*.json",
        "**/*.json",
        "**/*.wasm",
        "**/*.bin",
        "icons/*.svg",
        "icons/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
{
  "manifest_version": 2,
  "name": "Resist",
  "version": "1.0.0",
  "description": "Digital nutrition labels for social media content to help manage attention consumption",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://cdn.jsdelivr.net/*",
    "https://huggingface.co/*",
    "https://d2fu55o6hgtd0l.cloudfront.net/*"
  ],
  "background": {
    "scripts": ["background.js", "background-classification.js", "background-image-captioning.js", "thirdparty/ocr/flame-monkey.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["thirdparty/ocr/ocr-image.js", "content.js"],
      "css": ["content.css", "nutrition-label.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Resist - Digital Nutrition"
  },
  "options_page": "settings/index.html",
  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval' 'unsafe-eval' https://cdn.jsdelivr.net blob:; object-src 'self';",
  "web_accessible_resources": [
    "thirdparty/ocr/ocr-test.html",
    "thirdparty/ocr/*.js",
    "settings/*.js",
    "**.js",
    "*.json",
    "**/*.json",
    "**/*.wasm",
    "**/*.bin"
  ]
}